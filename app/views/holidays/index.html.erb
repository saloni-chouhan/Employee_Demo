<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header", style="background-color: #D5F5E3;">
          <strong><h4>Holiday Calender</h4></strong>
        </div>
        <div class="card-body">
          <p class="card-text">
            
        <table class="table table-light table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Date</th>
              <th>Occasion</th>
              <th>Day</th>
              <% if current_employee.role == 'admin' %>
              <th colspan="3">Actions</th>
              <% end %> 
            </tr>
          </thead>
          <tbody>
            <% @holidays.each do |holiday| %>
            <tr>
              <td><%= holiday.date.strftime("%d %b, %Y") %></td>
              <td><%= holiday.occasion %></td>
              <td><%= holiday.day %></td>
              <% if current_employee.role == 'admin' %>
                <td><%= link_to 'Edit', edit_holiday_path(holiday), class: 'btn btn-outline-success btn-sm' %></td>
                <td><%= link_to 'Destroy', holiday, data: { "turbo_method": :delete , turbo_confirm: "Are you sure?"}, class: 'btn btn-outline-danger btn-sm'  %></td>
                <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
            </p>
        </div>
      </div>
    </div>
  </div>
</div>
