<div class="container mt-3">
  <div class="mt-4 p-5 bg-light text-dark rounded">
    <h3>Department Detail</h3> 
    <p>
    <table class="table table-light table-striped table-hover">
    	<thead>
    		<tr>
    			<th>Name</th>
    		</tr>
    	</thead>
      <tbody>
        <tr>
          <td><%= @department.name %></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center">
      <%= link_to 'Edit', edit_department_path(@department), class: 'btn btn-outline-success' %>
      <%= link_to 'Back', departments_path, class: 'btn btn-outline-dark' %>
    </div>
  </p>
  </div>
</div>
