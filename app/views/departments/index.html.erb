<div class="container-fluid mt-3">
  <div class="row d-flex justify-content-center">
    <div class="col-md-12">
      <h1>Departments List</h1>
    <div class="right">
      <%= link_to 'Add Department', new_department_path, class: 'btn btn-outline-primary' %>
    </div>
    <br><br>

    <table class="table table-light table-striped table-hover">
      <thead>
        <tr>
          <th><%=sort_link(@q, :name)%></th>
          <% if current_employee.role == 'admin' %>
          <th colspan="3">Actions</th>
          <% end %> 
        </tr>
      </thead>
      <tbody>
        <% @departments.each do |department| %>
        <tr>
          <td><%= department.name %></td>
          <% if current_employee.role == 'admin' %>
            <td><%= link_to 'Show', department, class: 'btn btn-outline-primary btn-sm'%></td>
            <td><%= link_to 'Edit', edit_department_path(department), class: 'btn btn-outline-success btn-sm' %></td>
            <td><%= link_to 'Destroy', department, data: { "turbo_method": :delete , turbo_confirm: "Are you sure?"}, class: 'btn btn-outline-danger btn-sm'  %></td>
            <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
