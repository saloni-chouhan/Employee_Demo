<% if current_employee || current_employee.role == 'admin' %>
<% else %>
<% end %>
<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-md-12">
      <h3>Employees Leaves List</h3>
      <div class="right">
        
      </div>
      <div class="right">
        <%= link_to 'Apply Leave', new_leafe_path, class: 'btn btn-outline-primary' %>
      </div>
      <br><br>

      <table class="table table-light table-striped table-hover">
        <thead>
          <tr>
            <th>From Date</th>
            <th>To Date</th>
            <th>Reason</th>
            <th>Mail To</th>
            <th>Employee Name</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
            <% @leaves.each do |leave| %>
            <tr>
              <td><%= leave.from_date %></td>
              <td><%= leave.to_date %></td>
              <td><%= leave.reason %></td>
              <td><%= leave.mail_to %></td>
              <td><%= leave.employee.name %></td>
              <td><%= link_to 'Show', leave, class: 'btn btn-outline-primary btn-sm' %></td>
                <td><%= link_to 'Edit', edit_leafe_path(leave), class: 'btn btn-outline-success btn-sm' %></td>
                <td><%= link_to 'Destroy', leave, data: { "turbo_method": :delete , "turbo_confirm": "Are you sure?" },class: 'btn btn-outline-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
