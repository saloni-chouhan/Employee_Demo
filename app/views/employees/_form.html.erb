  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.text_field :email, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :address %><br>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :gender %><br>
    <%= form.text_field :gender, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :dob %><br>
    <%= form.date_field :dob, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number %><br>
    <%= form.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :designation %><br>
    <%= form.text_field :designation, class: 'form-control' %>
  </div>

